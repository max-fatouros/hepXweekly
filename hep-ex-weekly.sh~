#!/bin/bash

# hep-ex-weekly.sh â€” Fetches latest HEP-EX papers from INSPIRE-HEP (last 30 days)

INPIRE_API="https://inspirehep.net/api/literature"
SIZE=25
# NOTE: URL-encoded characters for square brackets and space
QUERY="q=collection:HEP+AND+arxiv_eprints.value:hep-ex+AND+earliest_date:%5BNOW-30DAYS+TO+*%5D"
FIELDS="fields=metadata.title,metadata.abstracts,metadata.arxiv_eprints,metadata.preprint_date,metadata.control_number"
SORT="sort=mostrecent"

echo "ğŸ” Fetching latest HEP-EX papers from INSPIRE-HEP..."

response=$(curl -s "${INPIRE_API}?${QUERY}&${SORT}&size=${SIZE}&${FIELDS}")

count=$(echo "$response" | jq '.hits.hits | length')

if (( count == 0 )); then
  echo "ğŸš« No recent HEP-EX papers found."
  exit 0
fi

echo "ğŸ“š Found $count HEP-EX papers in the last 30 days:"
echo "---------------------------------------------"

echo "$response" | jq -r '
  .hits.hits[] |
  {
    title: (.metadata.title[0].title // "â“ No title"),
    abstract: (.metadata.abstracts[0].value // "No abstract available."),
    arxiv: (.metadata.arxiv_eprints[0].value // "N/A"),
    date: (.metadata.preprint_date // "No date"),
    link: ("https://inspirehep.net/literature/" + (.metadata.control_number | tostring))
  } |
  "ğŸ”¹ \(.title)\nğŸ“„ \(.abstract)\nğŸ—“ï¸  \(.date)\nğŸ“ arXiv: \(.arxiv)\nğŸ”— Link: \(.link)\n"
'
